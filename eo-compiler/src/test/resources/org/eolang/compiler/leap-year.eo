# This program is from the EOLANG original paper

+alias org.eolang.*
+alias stdout org.eolang.io.Stdout
+alias stdin org.eolang.io.Stdin
+alias scanner org.eolang.txt.Scanner

[y] > leap
  or
    and
      eq (mod y 4) 0
      not (eq (mod y 100) 0)
    eq (mod y 400) 0

[args] > main
  stdout > help
    "Just run it and see the output"
  and
    stdout
      "Enter a year:"
    .print
    stdout
      concat
        scanner > year
          stdin
        .nextInt
        " is a leap year?"
        leap year
    .println

a > test
