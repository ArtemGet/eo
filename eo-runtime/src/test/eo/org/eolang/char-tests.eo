+package org.eolang
+alias org.eolang.io.stdout
+alias org.eolang.txt.sprintf
+alias org.eolang.hamcrest.assert-that
+junit

[] > compares-two-chars
  assert-that > @
    eq.
      'x'
      'x'
    $.equal-to TRUE

[] > compares-two-different-types
  assert-that > @
    not.
      eq.
        'x'
        42
    $.equal-to TRUE

[] > char-to-string
  assert-that > @
    eq.
      "A"
      'A'.as-string
    $.equal-to TRUE

[] > char-to-char-compares
  assert-that > @
    eq.
      'Ф'
      'Ф'
    $.equal-to TRUE

[] > to-bytes-and-backwards-char
  assert-that > @
    eq.
      'Ф'
      as-char.
        as-bytes.
          'Ф'
    $.equal-to TRUE

[] > supports-escape-sequences-line-break
  assert-that > @
    eq.
      '\n'
      '\012'
    $.equal-to TRUE

[] > supports-escape-sequences-unicode
  assert-that > @
    eq.
      '\u0424'
      'Ф'
    $.equal-to TRUE

[] > char-equals-to-bytes
  assert-that > @
    eq.
      'Ф'
      04-24
    $.equal-to TRUE

[] > as-hash-equals-to-similar-values
  assert-that > @
    eq.
      'a'.as-hash
      'a'.as-hash
    $.equal-to TRUE

[] > print-char-hashes
  assert-that > @
    stdout
      sprintf
        "a, b, c hashes = %d %d %d\n"
        'a'.as-hash
        'b'.as-hash
        'c'.as-hash
    $.anything
