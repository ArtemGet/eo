+tests
+package org.eolang
+version 0.0.0

# Test.
[] > i64-has-valid-bytes
  eq. > @
    (i64 42).as-bytes
    00-00-00-00-00-00-00-2A

# Test.
[] > i64-as-bytes-is-not-equal-to-number-bytes
  not. > @
    eq.
      (i64 234).as-bytes
      234.as-bytes

# Test.
(i64 nan).neg > [] > throws-on-creating-i64-from-nan

# Test.
(i64 positive-infinity).neg > [] > throws-on-creating-i64-from-positive-infinity

# Test.
(i64 negative-infinity).neg > [] > throws-on-creating-i64-from-negative-infinity

# Test.
(i64 42.5).neg > [] > throws-on-trying-to-convert-not-integer-to-i64

# Test.
(i64 42).eq 42.5 > [] > throws-on-comparison-with-not-integer

# Test.
(i64 42).plus 42.5 > [] > throws-on-addition-i64-with-not-integer

# Test.
(i64 42).minus 42.5 > [] > throws-on-subtraction-i64-with-not-integer

# Test.
(i64 42).times 42.5 > [] > throws-on-multiplication-i64-with-not-integer

# Test.
(i64 42).div 42.5 > [] > throws-on-division-i64-with-not-integer

# Test.
(i64 42).gt 42.5 > [] > throws-on-checking-greater-i64-with-not-integer

# Test.
(i64 42).gte 42.5 > [] > throws-on-checking-greater-equal-i64-with-not-integer

# Test.
(i64 42).lt 42.5 > [] > throws-on-checking-less-i64-with-not-integer

# Test.
(i64 42).lte 42.5 > [] > throws-on-checking-less-equal-i64-with-not-integer

# Test.
[] > i64-less-true
  lt. > @
    i64 10
    i64 50

# Test.
[] > i64-less-equal
  not. > @
    lt.
      i64 10
      i64 10

# Test.
[] > i64-less-false
  not. > @
    lt.
      i64 10
      i64 -5

# Test.
[] > i64-greater-true
  gt. > @
    i64 -200
    i64 -1000

# Test.
[] > i64-greater-false
  not. > @
    gt.
      i64 0
      i64 100

# Test.
[] > i64-greater-equal
  not. > @
    gt.
      i64 0
      i64 0

# Test.
[] > i64-lte-true
  lte. > @
    i64 -200
    i64 -100

# Test.
[] > i64-lte-equal
  lte. > @
    i64 50
    i64 50

# Test.
[] > i64-lte-false
  not. > @
    lte.
      i64 0
      i64 -10

# Test.
[] > i64-gte-true
  gte. > @
    i64 -1000
    i64 -1100

# Test.
[] > i64-gte-equal
  gte. > @
    i64 113
    i64 113

# Test.
[] > i64-gte-false
  not. > @
    gte.
      i64 0
      i64 10

# Test.
[] > i64-zero-eq-to-i64-zero
  eq. > @
    i64 0
    i64 0

# Test.
[] > i64-eq-true
  eq. > @
    i64 123
    i64 123

# Test.
[] > i64-eq-false
  not. > @
    eq.
      i64 123
      i64 42

# Test
[] > i64-one-plus-i64-one
  eq. > @
    (i64 1).plus (i64 1)
    2

# Test
[] > i64-one-minus-i64-one
  eq. > @
    (i64 1).minus (i64 1)
    i64 0

# Test.
(i64 2).div (i64 0) > [] > throws-on-division-i64-by-i64-zero

# Checks that division by one returns the dividend.
[] > i64-div-by-i64-one
  i64 -235 > dividend
  eq. > @
    dividend.div (i64 1)
    dividend

# Checks div with remainder
[] > i64-div-with-remainder
  eq. > @
    (i64 13).div (i64 -5)
    -2

# Test.
[] > i64-div-less-than-i64-one
  lt. > @
    (i64 1).div (i64 5)
    1

# Test.
[] > i64-multiply-by-zero
  eq. > @
    (i64 1000).times (i64 0)
    0
