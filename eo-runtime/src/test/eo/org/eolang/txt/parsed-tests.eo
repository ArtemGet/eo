+package org.eolang.txt
+home https://github.com/objectionary/eo
+version 0.0.0
+alias org.eolang.hamcrest.assert-that
+alias org.eolang.txt.parsed
+junit

[] > trims-string
  assert-that > @
    parsed "Hello, dude  "
    .trim
    $.equal-to "Hello, dude"

[] > turns-string-into-int
  assert-that > @
    parsed "42"
    .as-int
    $.equal-to 42

[] > turns-string-into-float
  assert-that > @
    parsed "3.1415926"
    .as-float
    $.equal-to 3.1415926

[] > joins-array
  assert-that > @
    joined.
      parsed ".."
      * "foo" "друг" "bar"
    $.equal-to "foo..друг..bar"
