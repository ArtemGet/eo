# Test.
[] > simple-bool-expression-via-memory-in-while
  memory TRUE > condition
  while > res
    condition
    [i] (condition.write FALSE > @)
  res.as-bool.not > @

# Test.
[] > last-while-dataization-object
  memory 0 > x
  eq. > @
    while > res
      2.gt x
      [i]
        seq > @
          *
            x.write
              x.as-int.plus 1
            x.as-int
    3

# Test.
[] > iterates-over-simple-counter
  memory 0 > x
  and. > @
    eq.
      x.write 5
      5
    eq.
      while
        10.gt x
        [i]
          x.write > @
            x.as-int.plus 1
      11

